<main>

    <!-- breadcrumb-area -->
    <section class="breadcrumb__area pt-60 pb-60 tp-breadcrumb__bg" data-background="/img/banner/breadcrumb-01.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-7 col-lg-12 col-md-12 col-12">
                    <div class="tp-breadcrumb">

                        <h2 class="tp-breadcrumb__title">All Orders</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- cart area -->
    <div class="cart-area pt-80 pb-80 wow fadeInUp" data-wow-duration=".8s" data-wow-delay=".2s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="#">
                        <div class="table-content table-responsive">
                            <table class="table" style="background-color:rgb(254, 235, 238) ; font-weight: bold;">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">No.</th>
                                        <th class="cart-product-name">User Name</th>
                                        <th class="product-price">User Mobile</th>
                                        <th class="product-quantity">TotalPrice</th>
                                        <th class="product-subtotal">Date</th>
                                        <th class="product-status">Payment<br>Type</th>
                                        <th class="product-remove">view-more</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orderData}}
                                    <tr>
                                        <td class="product-name">
                                            <a style="color:red ;">{{inc @index}}</a>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">{{this.orders.userName}}</span>
                                        </td>
                                        <td class="product-quantity">
                                            {{this.orders.userMobile}}
                                        </td>
                                        <td class="product-quantity">
                                            <i class="bi bi-currency-rupee"></i>{{this.orders.totalAmount}}
                                        </td>

                                        <td>
                                            {{this.orders.date}}
                                        </td>
                                        <td class="product-remove">
                                            {{this.orders.paymentType}}
                                        </td>
                                        <td class="product-more">
                                            <a href="/admin/view-order-more/{{this.orders._id}}"
                                                class="btn btn-outline-info btn-fw">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- cart area end-->
    <section class="mb-5">
        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="pagination">
                    <a href="#">&laquo;</a>
                    <a href="#">1</a>
                    <a href="#" class="active">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">6</a>
                    <a href="#">&raquo;</a>
                </div>
            </div>
        </div>
    </section>

</main>

<style>
    .pagination {
        display: inline-block;
    }

    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
        border: 1px solid #ddd;
    }

    .pagination a.active {
        background-color: pink;
        color: white;
        border: 1px solid rgb(255, 0, 43);
    }

    .pagination a:hover:not(.active) {
        background-color: #ddd;
    }
</style>