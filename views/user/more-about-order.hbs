<main>

    <!-- breadcrumb-area -->
    <section class="breadcrumb__area pt-60 pb-60 tp-breadcrumb__bg" data-background="/img/banner/breadcrumb-01.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-7 col-lg-12 col-md-12 col-12">
                    <div class="tp-breadcrumb">
                        <h2 class="tp-breadcrumb__title" style="color: palevioletred ;">Your Orders</h2>
                    </div>
                    <div style="padding-top:  10px; ">
                        <h3>Your Detailes</h3>
                        <ul style="list-style-type: none;font-weight: bold;font-size: medium;">

                            <li>Name : {{userData.orders.userName}}</li>
                            <li>Mobile : {{userData.orders.userMobile}}</li>
                            <li>Delivery Address :{{userData.orders.address}}</li>                           
                            <li>Offer Detailes :{{userData.orders.offerData}}%</li>
                            <li style="font-weight: bold;">All Total:<i class="bi bi-currency-rupee"></i>{{userData.orders.totalAmount}}</li>
                            <a href="/download-invoice/{{userData.orders._id}}"><label class="badge badge-primary">Dowload Data</label> </a>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- cart area -->
    <div class="cart-area pt-80 pb-80 wow fadeInUp" data-wow-duration=".8s" data-wow-delay=".2s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="#">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Images</th>
                                        <th class="cart-product-name">Product Name</th>
                                        <th class="product-price">Product Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-subtotal">Total</th>
                                        {{!-- <th class="product-remove">Cancel</th> --}}
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr>
                                        <td class="product-thumbnail">
                                            <a href="shop-details.html"><img
                                                    src="/product-images/{{this.productImages.[0]}}" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name">
                                            <a href="/product-detials/{{this.orders.productId}}"
                                                style="color:red ;">{{this.productName}}</a>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">{{this.productPrice}}</span>
                                        </td>
                                        <td class="product-quantity">
                                            {{this.ProductQuantity}}
                                        </td>
                                        <td class="product-subtotal">
                                            <span class="amount">{{this.TotalPrice}}</span>
                                        </td>

                                        {{!-- <td class="product-remove">
                                            <a href=""><i class="fa fa-times"></i></a>
                                        </td> --}}
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- cart area end-->

</main>